﻿@using E_Ticaret.Models
@model Urunler
@{
    ViewBag.Title = "Urun";
}

<main>
    <div class="row">
        <section class="col-md-4" aria-labelledby="gettingStartedTitle">
            <h2 id="gettingStartedTitle">Kategoriler</h2>
            <ul>
                @foreach (var item in (List<Kategoriler>)ViewBag.KategoriListesi)
                {
                    <li>
                        @item.KategoriAdi
                    </li>
                }
            </ul>
        </section>
        <section class="col-md-8" aria-labelledby="librariesTitle">
            <h2 id="librariesTitle">Ürün Bilgileri</h2>
            <br />
            <h5>@Model.UrunAdi</h5>
            <div class="row">
                <div class="col-md-6">
                    <img src="~/Resim/@(Model.UrunId).jpg" width="100" />
                </div>
                <div class="col-md-6">
                    Ürün Fiyatı:<span style="font-size:14px;font-weight:bold">@Model.UrunFiyati TL</span>
                    @using (Html.BeginForm("SepeteEkle", "Sepet"))
                    {
                        @Html.HiddenFor(x => x.UrunId)
                        <input type="number" name="adet" value="1" style="width:60px;" />
                        <input type="submit" id="sepetbtn" value="Sepete Ekle" />
                    }
                </div>
                <br /><br />
                <h2>Ürün Açıklaması</h2>
                <p>@Model.UrunAciklamasi</p>
            </div>

        </section>

    </div>
</main>